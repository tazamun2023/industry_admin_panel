@import "./variables.styl"

*{
  box-sizing: border-box;
}
body,
html {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  vertical-align: baseline;
  min-height: 100%;
  width: 100%;
  box-sizing: border-box;
}

body {
  font-size: 15px;
  font-family: "Cairo", sans-serif;
  font-weight: 400;
  color: #222;
}

h1, h2, h3, h4, h5, h6, p, ul, span, li, input, button {
  margin: 0;
  padding: 0;
  line-height: 1.4;
  box-sizing: border-box;
}
span{
  line-height: inherit;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: inherit;
  font-family: 'Cairo', sans-serif;
}

p {
  line-height: 1.8;
  font-size: 1em;
  font-weight: 400;
  color: #112211;
}


h1 {
  font-size: 3.5em;
  line-height: 1.2;
}

h2 {
  font-size: 2.5em;
  line-height: 1.3;
}

h3 {
  font-size: 1.8em;
  line-height: 1.4;
}

h4 {
  font-size: 1.2em;
  line-height: 1.5;
}

h5 {
  font-size: 1.1em;
  line-height: 1.3;
}

h6 {
  font-size: .95em;
  letter-spacing: 1px;
  line-height: 1.6;
}


strong {
  font-weight: 700;
}

b {
  font-weight: 700;
  line-height: 1;
}

img {
  width: 100%;
  object-fit: cover;
}

li {
  list-style: none;
  display: inline-block;
  font-size: 1em;
}

i, span {
  display: inline-block;
}

b.max-bold {
  font-weight: 700;
}

.textarea,
.button,
button,
textarea,
input:not([type='checkbox'], [type='radio']):not(.vs__search):not(.vs__selected-options) {
  width: 100%;
  outline: 0;
  padding: 0 15px;
  height: btn-height
  line-height: btn-height - 2
  border: 1px solid #ddd;
  border-radius: 10px;
}

.vs__search, .vs__search:focus{
  height:36px;
}
.vs--searchable .vs__dropdown-toggle{
  padding: 0px;
}
.vs--single .vs__selected {
    margin: 0px;
    white-space: nowrap;
    padding: 0px;
    width: 182px;
    overflow: hidden;
    text-overflow: ellipsis;
}
.vs__clear{
  height: 30px;
}
.button{
  width auto
}

video{
  width: 100%;
  height: auto;
  object-fit: cover;
}

.textarea,
textarea {
  max-width: 100%;
  min-width: 100%;
  line-height: 1.6;
  min-height: 150px;
  padding: 14px 15px;
  vertical-align: top;
}

textarea:focus,
textarea:focus,
input:focus,
input:active {
  border-color: #555;
}

.textarea{
  height: auto;
  padding 15px
}

button {
  margin-bottom: 0;
  width: auto;
  background: none;
  cursor: pointer;
}

button:hover:not(.mfp-arrow, .mfp-close, .primary-btn, .lite-btn, .nav-l, .nav-r, .delete-btn) {
  background: #eee;
}

button:hover:enabled{
  border-color: #aaa;
}

a, button {
  display: inline-block;
  text-decoration: none;
  color: inherit;
  -webkit-transition: all .2s ease-in-out;
  transition: all .1s ease-in-out;
}

a:focus,
a:active,
a:hover,
button:focus,
button:active,
button:hover {
  text-decoration: none;
}
input{
  transition all .15s

}
button:active,
textarea:focus,
textarea:active,
input:focus,
input:active {
  background: rgba(0,0,0,.02);
  box-shadow 0 0 3px 2px primary-color
}


label{
  display: inline-block;
}

::placeholder {
  color: #aaa;
  font-size: .9em;
  letter-spacing: 1px;
}

:-ms-input-placeholder {
  color: #aaa;
  font-size: .9em;
  letter-spacing: 1px;
}

:-ms-input-placeholder {
  color: #aaa;
  font-size: .9em;
  letter-spacing: 1px;
}


/* RESPONSIVE */
@media only screen and (max-width: 1600px) {

  h1 {
    font-size: 6em;
  }


}

@media only screen and (max-width: 1400px) {

  h1 {
    font-size: 5em;
  }

  h2 {
    font-size: 3em;
  }

}

@media only screen and (max-width: 1200px) {

  h1 {
    font-size: 4em;
  }

  h2 {
    font-size: 2.8em;
  }

}

@media only screen and (max-width: 992px) {

  /*body { overflow-x: unset; }*/

}

@media only screen and (max-width: 768px) {

  .button,
  button,
  textarea,
  input:not([type='checkbox'], [type='radio']){
    height: btn-height-sm
    line-height: btn-height-sm - 2
  }

  h1 {
    font-size: 3em;
  }

  h2 {
    font-size: 2.5em;
  }

}

@media only screen and (max-width: 576px) {

  body {
    font-size: 14px;
  }

  h1 {
    font-size: 2.7em;
  }

  h2 {
    font-size: 2.3em;
  }

}
