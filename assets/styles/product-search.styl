@import "variables.styl"
.search-dropdown
  position absolute
  left 0
  right 0
  top 100%
  background #fff
  overflow hidden
  border-radius 0 0 10px 10px
  border 1px solid #ddd
  border-top 0
  z-index 2
  box-shadow 0 5px 10px rgba(0,0,0, .15)
  display flex
  flex-direction column
  justify-content flex-end

  .suggestion-body
    position relative
    min-height 300px

    ul
      height 300px
      overflow auto
      li
        display block
        a
          border-bottom 1px solid #eee
          padding 15px 15px

          i
            margin-left 15px

        &:last-child
          a
            border-bottom none

  .suggestion-footer
    background #f7f8f9
    border-top 1px solid #eee

.deletable
  td
    position relative

    &.undo-container
      &:after
        z-index -1

    &:after
      content ''
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      opacity 0
      z-index -1
      background #fff

  &.deleted
    td:not(.undo-container)
      &:after
        z-index 1
        opacity .6
